if (direction >= 0 && direction<=90)
{
sprite_index = spr_RightFront;
}

if (direction >= 90 && direction<=180)
{
sprite_index = spr_LeftFront;
}


if (direction >= 180 && direction<=270)
{
sprite_index = spr_LeftFront;
}

if (direction >= 270 && direction<=360)
{
sprite_index = spr_RightFront;
}
